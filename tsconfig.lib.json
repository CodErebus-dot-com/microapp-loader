{
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "dist",
    "declaration": false,
    "skipLibCheck": true,
    "allowJs": true,
    "composite": true,
    "sourceMap": false,
    "types": ["node"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "jest.config.ts", "node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
